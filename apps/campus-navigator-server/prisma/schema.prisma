datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Location {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  latitude  Float?
  longitude Float?
  name      String?
  updatedAt DateTime @updatedAt
}

model Landmark {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  latitude    Float?
  longitude   Float?
  name        String?
  updatedAt   DateTime @updatedAt
}

model Route {
  createdAt     DateTime @default(now())
  distance      Float?
  duration      Float?
  endLocation   String?
  id            String   @id @default(cuid())
  startLocation String?
  updatedAt     DateTime @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
